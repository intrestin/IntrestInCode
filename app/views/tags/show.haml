- content_for :page_title do
  - if @stream.tag_name
    = @stream.display_tag_name
  - else
    = t('.whatup', :pod => @pod_url)

- content_for :head do
  = include_javascripts :home
  :javascript
    $(".people_stream .pagination a").live("click", function() {
      $.getScript(this.href);
      return false;
    });

/.span-6.tags_people
/  %h3
/    = t('people', :count => @stream.tagged_people_count)
/
/  .side_stream.stream
/    = render :partial => 'people/index', :locals => {:people => @stream.tagged_people}
/
/  %br
/
/  .section
/    = render "tags/followed_tags_listings"

.row
  %h1
    = @stream.display_tag_name
    %small
      = t('.followed_by')
      = t('people', :count => @stream.tag_follow_count)

  - if user_signed_in?
    - unless tag_followed?
      = button_to t('.follow', :tag => @stream.tag_name), tag_tag_followings_path(:name => @stream.tag_name), :method => :post, :class => 'btn take_action'
    - else
      = button_to t('.following', :tag => @stream.tag_name), tag_tag_followings_path(:name => @stream.tag_name), :method => :delete, :class => 'btn success tag_following in_aspects take_action'

    = render 'shared/publisher', :selected_aspects => @stream.aspect_ids, :aspect_ids => @stream.aspect_ids, :for_all_aspects => true, :aspect => @stream.aspect

= render 'aspects/aspect_stream', :stream => @stream

